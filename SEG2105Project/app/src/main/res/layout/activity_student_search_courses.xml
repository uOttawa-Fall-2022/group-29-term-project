<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentSearchCourses">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/studentSearchToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="     Search Course"
        app:titleTextColor="#FFFFFF"
        />

    <Button
        android:id="@+id/studentSearchToolbarBack"
        android:translationY="4.5dp"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:icon="@drawable/ic_baseline_arrow_back_ios_24" />

    <EditText
        android:id="@+id/studentSearchCourseCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course code here"
        android:minHeight="48dp"
        android:translationY="150dp" />

    <EditText
        android:id="@+id/studentSearchCourseName"
        android:layout_below="@+id/studentSearchCourseCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course name here"
        android:minHeight="48dp"
        android:translationY="150dp" />

    <EditText
        android:id="@+id/studentSearchCourseDay"
        android:layout_below="@+id/studentSearchCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course day here"
        android:minHeight="48dp"
        android:translationY="150dp" />

    <Button
        android:id="@+id/studentSearchCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/studentSearchCourseName"
        android:translationY="250dp"
        android:backgroundTint="#2196F3"
        android:text="Find Course"/>

</RelativeLayout>